<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:output method="html" encoding="UTF-8" indent="yes" />

  <xsl:template match="/rss">
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <link rel="icon" href="omrss.gif" type="image/x-icon"></link>
        <title>
          <xsl:value-of select="channel/title" />
        </title>
        <style>
          * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
          }

          body {
          font-family: "Helvetica Neue", Arial, sans-serif;
          line-height: 1.6;
          color: #333;
          background: #f9f9f9;
          padding: 20px;
          }

          .container {
          max-width: 900px;
          margin: 0 auto;
          overflow: hidden;
          }

          header {
          color: #333;
          padding: 10px 40px;
          margin: 15px;
          }

          header h1 {
          font-size: 2rem;
          font-weight: 600;
          margin-bottom: 10px;
          }

          header p {
          opacity: 0.9;
          font-size: 1rem;
          }

          .content {
          padding: 20px 40px;
          }

          .menu-items {
          display: grid;
          gap: 10px;
          }

          .menu-item {
          padding: 16px;
          }

          .menu-item h3 {
          font-size: 1.25rem;
          font-weight: 600;
          color: #333;
          margin-bottom: 12px;
          line-height: 1.4;
          }

          .menu-item .description {
          color: #333;
          font-size: 0.95rem;
          line-height: 1.5;
          }

          .menu-item .description i {
          font-style: normal;
          color: #2196F3;
          font-weight: 500;
          }

          footer {
          padding: 30px 40px;
          text-align: center;
          font-size: 0.9rem;
          color: #666;
          }

          footer a {
          color: #667eea;
          text-decoration: none;
          }

          footer a:hover {
          text-decoration: underline;
          }

          @media (max-width: 768px) {
          body {
          padding: 10px;
          }

          header {
          padding: 10px 20px;
          }

          header h1 {
          font-size: 1.5rem;
          }

          .content {
          padding: 20px;
          }

          .menu-item {
          padding: 10px 20px;
          }

          .menu-item h3 {
          font-size: 1.1rem;
          }

          footer {
          padding: 20px;
          }
          }

          @media (max-width: 480px) {
          header h1 {
          font-size: 1.25rem;
          }

          .menu-item {
          padding: 16px;
          }

          .menu-item h3 {
          font-size: 1rem;
          }
          }
        </style>
      </head>
      <body>
        <div class="container">
          <header>
            <h1>
              <xsl:value-of select="channel/title" />
            </h1>
          </header>

          <main>
            <div class="content">
              <div class="menu-items">
                <xsl:for-each select="channel/item">
                  <div class="menu-item">
                    <h3>
                      <xsl:value-of select="title" />
                    </h3>
                    <div class="description">
                      <xsl:value-of select="description" disable-output-escaping="yes" />
                    </div>
                  </div>
                </xsl:for-each>
              </div>
            </div>
          </main>

          <footer>
            <p> <strong>ðŸ“° This is an RSS feed.</strong>
              Subscribe by copying the URL into your RSS reader.
            </p>
            <p> Generated by <xsl:value-of select="channel/generator" /> | <a href="{channel/link}"
                target="_blank">Visit Website</a>
            </p>
            <p>
              <xsl:choose>
                <xsl:when test="channel/lastBuildDate"> Last updated: <xsl:value-of
                    select="channel/lastBuildDate" />
                </xsl:when>
                <xsl:when test="channel/pubDate"> Published: <xsl:value-of select="channel/pubDate" />
                </xsl:when>
                <xsl:otherwise>
                  <xsl:value-of select="channel/description" />
                </xsl:otherwise>
              </xsl:choose>
            </p>
          </footer>
        </div>
      </body>
    </html>
  </xsl:template>
</xsl:stylesheet>
